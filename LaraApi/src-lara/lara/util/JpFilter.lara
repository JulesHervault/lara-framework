JpFilter.prototype._match = function($jp, i) {
	var attributeValue = $jp[this.attributes[i]];
	
	//if(attributeValue === undefined) {
	if(Check.isUndefined(attributeValue)) {
		return false;
	}
	
	// Convert to string
	var testString = "" + attributeValue;
//	if(!isString(attributeValue)) {
//		return false;
//	}
	

	if(this.isRegex[i]) {
		return attributeValue.match(this.patterns[i]);
	} 
	else {
		//println("Attribute value: " + attributeValue);
		//println("Pattern: " + this.patterns[i]);
		return attributeValue === this.patterns[i];
	}

